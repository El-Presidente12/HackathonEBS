<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#777777"
    tools:context="com.ebs.piggyinvest.MainActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView6"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="EBS PORTFOLIO"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Shared with 5 People"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#777777" />

        <SurfaceView
            android:id="@+id/surfaceView1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <SurfaceView
            android:id="@+id/textureView2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/surfaceView1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="50dp" />

        <SurfaceView
            android:id="@+id/textureView3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textureView2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="50dp" />

        <SurfaceView
            android:id="@+id/surfaceView2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/textureView3"
            android:layout_below="@+id/textureView3" />

        <SurfaceView
            android:id="@+id/surfaceView3"
            android:layout_width="1dp"
            android:layout_height="145dp"
            android:layout_below="@+id/surfaceView1"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/surfaceView4"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/surfaceView3"
            android:layout_below="@+id/textureView3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="clickSell"
            android:src="@drawable/sell" />

        <SurfaceView
            android:id="@+id/surfaceView4"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_below="@+id/surfaceView3"
            android:layout_toRightOf="@+id/surfaceView3" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/surfaceView4"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/surfaceView3"
            android:onClick="clickBuy"
            android:src="@drawable/buy" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textureView2"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/surfaceView3"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/barchart" />

        <TextView
            android:id="@+id/tvCurrShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvDayChange"
            android:layout_alignTop="@+id/imageView1"
            android:layout_toLeftOf="@+id/surfaceView3"
            android:gravity="center"
            android:text="Akt. Anteil" />

        <TextView
            android:id="@+id/tvDayChange"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCurrShare"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView1"
            android:gravity="center"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#777777"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textureView3"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textureView2"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/group" />

        <TextView
            android:id="@+id/tvGroupDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignLeft="@+id/tvDayChange"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toLeftOf="@+id/imageView3"
            android:gravity="center"
            android:text="5 | $" />

        <ImageView
            android:id="@+id/ivPort"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textureView2"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignTop="@+id/surfaceView3"
            android:layout_marginLeft="5dp"
            android:src="@drawable/portup" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textureView3"
            android:layout_alignLeft="@+id/surfaceView4"
            android:layout_below="@+id/textureView2"
            android:layout_marginLeft="5dp"
            android:src="@drawable/dia1" />

        <TextView
            android:id="@+id/tvProfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvCurrShare"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/ivPort"
            android:gravity="center"
            android:text="Profit"
            android:textColor="#61BF45" />

        <TextView
            android:id="@+id/tvProfitPerc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvProfit"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvProfit"
            android:gravity="center"
            android:text="Prof. Perc."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#61BF45"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:text="(20%)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#777777" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textureView3"
            android:layout_alignTop="@+id/tvGroupDetail"
            android:layout_toRightOf="@+id/imageView5"
            android:gravity="center"
            android:text="   $1000 "
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/topbar" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/relativeLayout1" >

    </ListView>

</RelativeLayout>